<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".surfaceview.SurfaceViewExample">

  <Button
      android:id="@+id/surfaceViewCameraButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="surfaceViewCameraButtonClicked"
      android:text="Camera"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/surfaceViewMediaPlayerButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="surfaceViewMediaPlayerButtonClicked"
      android:text="MediaPlayer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/surfaceViewCameraButton" />

</androidx.constraintlayout.widget.ConstraintLayout>